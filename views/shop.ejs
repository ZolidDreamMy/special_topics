<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1><%= product.product_id %></h1>
                            <h2 class="product_name"><%= product.product_name %></h2>
                        </header>
                        <div class="card__image">
                                <img src="<%= product.image_path %>"alt="A closht">
                        </div>
                        <div class="card__content">
                            <h3 class="product_price"><%= product.price %> Bath</h3>
                            <!-- <p class="product_description"><%= product.detail %></p> -->
                        </div>
                        <div class="card__actions">
                            <form action="/add-product" method="GET">
                                <input type="hidden" id="product_id" name="product_id" value="<%= product.product_id %>">
                               <button id="<%= product.product_id %>" class="btn" type="submit" >Detail</button>
                           </form>
                        </div>
                    </article>
                <% } %>
            </div>
            
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('includes/end.ejs') %>